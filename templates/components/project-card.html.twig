{#
    Project card component
    
    Parameters:
    - project: The project object to display
    - language: Current language code
    - translations: Translation service
#}

<article class="bg-[#f5f5f5] rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="md:col-span-1">
            <h3 class="text-2xl font-black text-black mb-2">
                {{ project.type|upper }} - <span class="font-bold text-[#262732]">{{ project.title }}</span>
            </h3>
            <p class="text-lg italic text-black mb-4">
                {% if project.status == 'current' %}
                    {{ translations.translate('project.since') }} {{ project.start_date|date('F Y') }}
                {% else %}
                    {{ project.start_date|date('F Y') }}
                    {% if project.end_date %}
                        - {{ project.end_date|date('F Y') }}
                    {% endif %}
                {% endif %}
            </p>
            <div class="space-y-2">
                {% if project.github_url %}
                    <a href="{{ project.github_url }}" target="_blank" 
                        class="block text-sm italic text-[#0f0f0f] hover:underline">
                        {{ project.github_url|replace({'https://': '', 'http://': ''}) }}
                    </a>
                {% endif %}
                
                {% if project.website_url %}
                    <a href="{{ project.website_url }}" target="_blank"
                        class="block text-sm italic text-[#0f0f0f] hover:underline">
                        {{ project.website_url|replace({'https://': '', 'http://': ''}) }}
                    </a>
                {% endif %}
            </div>
        </div>
        
        <div class="md:col-span-3">
            <p class="text-lg mb-6 text-[#262732]">
                {{ project.description|nl2br }}
            </p>
            <p class="text-lg italic text-[#262732]">
                {{ project.skills }}
            </p>
            
            {% if is_admin is defined and is_admin %}
                <div class="flex justify-end mt-4 space-x-4">
                    <a href="/admin/project/edit/{{ project.id }}" class="px-4 py-2 bg-[var(--color-primary)] text-white rounded-md hover:bg-[var(--color-primary-dark)] transition-colors">
                        {{ translations.translate('admin.edit') }}
                    </a>
                    <form action="/admin/project/delete/{{ project.id }}" method="post" onsubmit="return confirm('{{ translations.translate('admin.confirm_delete') }}')">
                        <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors">
                            {{ translations.translate('admin.delete') }}
                        </button>
                    </form>
                </div>
            {% endif %}
        </div>
    </div>
</article>
