{% extends 'base.html.twig' %}

{% block title %}500 - {{ translations.translate('error.server_error') }} - {{ translations.translate('site.title') }}{% endblock %}

{% block meta_description %}{{ translations.translate('error.500_description') }}{% endblock %}

{% block content %}
<main class="flex flex-col items-center justify-center min-h-screen px-4 text-center">
    <div class="content-wrapper max-w-2xl">
        <h1 class="text-8xl font-black mb-4 animate-pulse">500</h1>
        <h2 class="text-4xl font-bold mb-8">{{ translations.translate('error.server_error') }}</h2>
        <p class="text-xl mb-8 opacity-80">
            {{ translations.translate('error.500_message') }}
        </p>
        
        {% if exception and app.debug %}
            <div class="mb-8 text-left bg-[rgba(0,0,0,0.3)] p-4 rounded-md overflow-auto max-h-64">
                <h3 class="text-xl font-bold mb-2 text-red-400">{{ translations.translate('error.exception_details') }}</h3>
                <p class="mb-2"><strong>{{ translations.translate('error.message') }}:</strong> {{ exception.message }}</p>
                <p class="mb-2"><strong>{{ translations.translate('error.file') }}:</strong> {{ exception.file }}</p>
                <p class="mb-4"><strong>{{ translations.translate('error.line') }}:</strong> {{ exception.line }}</p>
                <h4 class="font-bold mb-2">{{ translations.translate('error.stack_trace') }}:</h4>
                <pre class="text-xs overflow-auto whitespace-pre-wrap">{{ exception.trace }}</pre>
            </div>
        {% endif %}
        
        <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4 justify-center">
            <button onclick="window.history.back()" class="px-8 py-3 bg-[var(--color-surface)] hover:bg-[var(--color-surface-hover)] transition-colors rounded-md font-bold text-lg">
                {{ translations.translate('error.go_back') }}
            </button>
            <a href="/" class="px-8 py-3 bg-[var(--color-primary)] hover:bg-[var(--color-primary-dark)] transition-colors rounded-md font-bold text-lg">
                {{ translations.translate('error.back_to_home') }}
            </a>
        </div>
    </div>
</main>
{% endblock %}
