{% extends 'base.html.twig' %}

{% block title %}{{ translations.translate('admin.dashboard') }} - {{ translations.translate('site.title') }}{% endblock %}

{% block content %}
<div class="admin-content container mx-auto px-4 py-8">
    <h1 class="text-3xl md:text-4xl font-bold mb-8">{{ translations.translate('admin.dashboard') }}</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        {# Projects stats #}
        <div class="bg-[var(--color-surface)] p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-bold mb-4">{{ translations.translate('admin.projects') }}</h2>
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-4xl font-bold">{{ currentProjectCount + pastProjectCount }}</p>
                    <p class="text-sm opacity-70">{{ translations.translate('admin.total_projects') }}</p>
                </div>
                <div>
                    <a href="/admin/projects" class="bg-[var(--color-primary)] hover:bg-[var(--color-primary-dark)] transition-colors px-4 py-2 rounded text-white font-medium">
                        {{ translations.translate('admin.manage') }}
                    </a>
                </div>
            </div>
            <div class="grid grid-cols-2 gap-4 mt-4">
                <div class="bg-[var(--color-background)] p-4 rounded">
                    <p class="text-2xl font-bold">{{ currentProjectCount }}</p>
                    <p class="text-sm opacity-70">{{ translations.translate('admin.current_projects') }}</p>
                </div>
                <div class="bg-[var(--color-background)] p-4 rounded">
                    <p class="text-2xl font-bold">{{ pastProjectCount }}</p>
                    <p class="text-sm opacity-70">{{ translations.translate('admin.past_projects') }}</p>
                </div>
            </div>
        </div>
        
        {# Personal Info #}
        <div class="bg-[var(--color-surface)] p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-bold mb-4">{{ translations.translate('admin.personal_info') }}</h2>
            <p class="mb-4 opacity-70">{{ translations.translate('admin.personal_info_desc') }}</p>
            <div class="mt-4">
                <a href="/admin/personal-info" class="bg-[var(--color-primary)] hover:bg-[var(--color-primary-dark)] transition-colors px-4 py-2 rounded text-white font-medium">
                    {{ translations.translate('admin.edit_personal_info') }}
                </a>
            </div>
        </div>
        
        {# User profile #}
        <div class="bg-[var(--color-surface)] p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-bold mb-4">{{ translations.translate('admin.user_profile') }}</h2>
            <div class="flex items-center mb-4">
                <div class="w-16 h-16 rounded-full bg-[var(--color-primary)] flex items-center justify-center mr-4">
                    <span class="text-2xl font-bold">{{ request.getUserFullName()|slice(0, 1) }}</span>
                </div>
                <div>
                    <p class="font-bold text-lg">{{ request.getUserFullName() }}</p>
                    <p class="opacity-70">{{ request.getUserInfo().userEmail }}</p>
                </div>
            </div>
            <div class="mt-4">
                <a href="/admin/profile" class="bg-[var(--color-primary)] hover:bg-[var(--color-primary-dark)] transition-colors px-4 py-2 rounded text-white font-medium">
                    {{ translations.translate('admin.edit_profile') }}
                </a>
            </div>
        </div>
    </div>
    
    <div class="bg-[var(--color-surface)] p-6 rounded-lg shadow-md mb-8">
        <h2 class="text-xl font-bold mb-4">{{ translations.translate('admin.quick_actions') }}</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <a href="/admin/project/new" class="bg-[var(--color-primary)] hover:bg-[var(--color-primary-dark)] transition-colors px-6 py-4 rounded text-white font-medium flex items-center justify-center">
                <span class="mr-2">+</span> {{ translations.translate('admin.add_project') }}
            </a>
            <a href="/" class="bg-[var(--color-background)] hover:bg-[rgba(38,39,50,0.8)] transition-colors px-6 py-4 rounded text-white font-medium flex items-center justify-center">
                {{ translations.translate('admin.view_site') }}
            </a>
            <a href="/logout" class="bg-red-700 hover:bg-red-800 transition-colors px-6 py-4 rounded text-white font-medium flex items-center justify-center">
                {{ translations.translate('admin.logout') }}
            </a>
        </div>
    </div>
    
    <div class="bg-[var(--color-surface)] p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-bold mb-4">{{ translations.translate('admin.language_settings') }}</h2>
        <p class="mb-4 opacity-70">{{ translations.translate('admin.language_settings_desc') }}</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <a href="{{ language == 'fr' ? '/en' : '/' }}" class="bg-[var(--color-background)] hover:bg-[rgba(38,39,50,0.8)] transition-colors px-6 py-4 rounded text-white font-medium flex items-center justify-center">
                <span class="mr-2">{{ language == 'fr' ? 'ðŸ‡¬ðŸ‡§' : 'ðŸ‡«ðŸ‡·' }}</span>
                {{ language == 'fr' ? translations.translate('admin.view_english') : translations.translate('admin.view_french') }}
            </a>
        </div>
    </div>
</div>
{% endblock %}
