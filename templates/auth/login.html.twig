{% extends 'base.html.twig' %}

{% block title %}{{ translations.translate('login.title') }} - {{ translations.translate('site.title') }}{% endblock %}

{% block content %}
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <img class="mx-auto h-24 w-auto" src="/assets/img/AshaLogo.png" alt="Logo">
            <h2 class="mt-6 text-center text-3xl font-extrabold text-[var(--color-text)]">
                {{ translations.translate('login.title') }}
            </h2>
        </div>
        
        <form class="mt-8 space-y-6" action="/login" method="POST">
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="email" class="sr-only">{{ translations.translate('login.email') }}</label>
                    <input id="email" name="email" type="email" autocomplete="email" required 
                        value="{{ formData.email|default('') }}"
                        class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-600 placeholder-gray-500 bg-[var(--color-background)] text-[var(--color-text)] rounded-t-md focus:outline-none focus:ring-[var(--color-primary)] focus:border-[var(--color-primary)] focus:z-10 sm:text-sm" 
                        placeholder="{{ translations.translate('login.email') }}">
                </div>
                <div>
                    <label for="password" class="sr-only">{{ translations.translate('login.password') }}</label>
                    <input id="password" name="password" type="password" autocomplete="current-password" required 
                        class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-600 placeholder-gray-500 bg-[var(--color-background)] text-[var(--color-text)] rounded-b-md focus:outline-none focus:ring-[var(--color-primary)] focus:border-[var(--color-primary)] focus:z-10 sm:text-sm" 
                        placeholder="{{ translations.translate('login.password') }}">
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input id="remember_me" name="remember_me" type="checkbox" 
                        {% if formData.remember_me|default(false) %}checked{% endif %}
                        class="h-4 w-4 text-[var(--color-primary)] focus:ring-[var(--color-primary)] bg-[var(--color-background)] border-gray-600 rounded">
                    <label for="remember_me" class="ml-2 block text-sm text-[var(--color-text)]">
                        {{ translations.translate('login.remember_me') }}
                    </label>
                </div>

                <div class="text-sm">
                    <a href="/forgot-password" class="font-medium text-[var(--color-primary)] hover:text-[var(--color-primary-dark)]">
                        {{ translations.translate('login.forgot_password') }}
                    </a>
                </div>
            </div>

            <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-[var(--color-primary)] hover:bg-[var(--color-primary-dark)] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--color-primary)]">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <svg class="h-5 w-5 text-[var(--color-primary-dark)] group-hover:text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                        </svg>
                    </span>
                    {{ translations.translate('login.submit') }}
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
